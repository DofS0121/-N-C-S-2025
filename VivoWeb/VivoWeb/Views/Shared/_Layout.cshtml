<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - VivoWeb</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap 5 & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            background-color: #f9f9f9;
            color: #333;
        }

        .navbar {
            background-color: #007bff !important;
        }

        .navbar-brand {
            font-weight: bold;
            color: #FFD700 !important;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
        }

        .nav-link {
            color: white !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #ffdd57 !important;
            }

        .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid white;
            margin-right: 6px;
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 15px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark">
        <div class="container">
            @Html.ActionLink("✈ VivoWeb", "Index", "Home", null, new { @class = "navbar-brand" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">@Html.ActionLink("🏠 Trang chủ", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("📢 Tin tức", "Index", "News", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("🧭 Tour", "Index", "Tour", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("📞 Liên hệ", "Contact", "Home", null, new { @class = "nav-link" })</li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (Session["UserID"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                <img src="@Session["UserAvatar"] ?? " /images/default-avatar.png"" class="user-avatar" />
                                <span>@Session["CustomerName"]</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Action("CustomerProfile", "User")">👤 Thông tin cá nhân</a></li>
                                @*<li><a class="dropdown-item" href="@Url.Action("Orders", "Order")">🛍 Đơn hàng của tôi</a></li>*@
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "User")">🚪 Đăng xuất</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("🔑 Đăng nhập", "Login", "User", null, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content py-4">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - VivoWeb Online Tour Booking</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("upload", required: false)

    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
