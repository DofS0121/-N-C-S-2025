@model VivoWeb.Models.User
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <h2 class="login-title">Đăng nhập</h2>

    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal login-form">
            @if (ViewBag.LoginError != null)
            {
                <div class="alert alert-danger">@ViewBag.LoginError</div>
            }

            <div class="form-group">
                <label for="phone" class="form-label">
                    <i class="fas fa-user"></i> Số điện thoại / Tên đăng nhập
                </label>
                <input type="text" name="phone" id="phone" class="form-control" required placeholder="Nhập số điện thoại hoặc tên đăng nhập" />
            </div>

            <div class="form-group password-group">
                <label for="password" class="form-label">
                    <i class="fas fa-lock"></i> Mật khẩu
                </label>
                <div class="password-wrapper">
                    <input type="password" id="password" name="password" class="form-control" required placeholder="Nhập mật khẩu" />
                    <span class="toggle-password" onclick="togglePassword()">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
            </div>

            <div class="form-group text-center">
                <p>Bạn chưa có tài khoản? <a href="@Url.Action("Register", "User")">Đăng ký ngay</a></p>
            </div>
        </div>
    }
</div>

<style>
    .login-container {
        max-width: 400px;
        margin: 60px auto;
        padding: 30px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }

    .login-title {
        text-align: center;
        margin-bottom: 25px;
        color: #007bff;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .password-wrapper {
        position: relative;
    }

    .toggle-password {
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translateY(-50%);
        cursor: pointer;
    }

        .toggle-password i {
            color: #aaa;
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

<script>
    function togglePassword() {
        const input = document.getElementById("password");
        const icon = document.querySelector(".toggle-password i");

        if (input.type === "password") {
            input.type = "text";
            icon.classList.replace("fa-eye", "fa-eye-slash");
        } else {
            input.type = "password";
            icon.classList.replace("fa-eye-slash", "fa-eye");
        }
    }
</script>
